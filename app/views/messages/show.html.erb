<h1>ユーザー詳細</h1>
<h2><%= @user.name %></h2>

<% unless @user.id == current_user.id %>
  <% if @is_room == true %>
    <%= link_to "会話へ", room_path(@room_id) %>
  <% else %>
    <%= render "form" %>
  <% end %>
<% end %>

<% if current_user.admin? %>
  <%= link_to "ユーザー一覧に戻る", messages_path %>
<% else %>
  <%= link_to "HOME", user_path %>
<% end %>