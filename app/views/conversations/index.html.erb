<h1>会話履歴</h1>

<% @all_conver.each do |conver| %>
  <% if conver.messages.presence %>
    <%= conver.messages.sorted_desc.first.content %>
      <%= link_to conversation_path(conver.id) do %>
      <%= conver.user.name %><br>
    <% end %>
  <% end %>
<% end %>

<%= link_to "ユーザー一覧に戻る", users_path %>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>