<% unless current_user.admin? %>
  <h1><%= link_to "My ドクター", home_path(current_user) %></h1>
<% end %>

<h5><strong><%=link_to @conver_user.name, user_path(@conver_user.id)%></strong></h5><hr>

<%= render "message", message: @messages %>
<%= render "form", conversation: @conversation %>

<% if current_user.admin? %>
  <%= link_to "会話履歴", conversations_path %>
  <%= link_to "ユーザー一覧に戻る", users_path %>
<% else %>
  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% end %>