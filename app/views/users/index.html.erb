<h1>ユーザー一覧</h1>
<h2>こんにちは <%= current_user.name %>さん</h2>

<% @users.each do |user| %>
  <%= link_to user.name, user_path(user.id) %>
  <% if user.avatar.present? %>
    <%= link_to image_tag(user.avatar.variant(resize: "50x50")), user_path(user) %>
  <% else %>
    <%= link_to image_tag("default_user.png", size: "50x50"), user_path(user) %>
  <% end %>
  <hr>
<% end %>

<%= link_to "会話履歴", conversations_path %>
<%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>