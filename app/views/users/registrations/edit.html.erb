<h2>プロフィール編集(<%= @user.name %>)</h2>

<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize:'100x100') %>
  <%= link_to 'アカウント画像を削除', purge_user_path(@user.id),　method: :get, data:{confirm: "アカウント画像を削除しますか？"} %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field">
    <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
        <%= @minimum_password_length%> 文字以上(パスワードを変更しない場合は空白のまま)
      <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(変更の確認)"%><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :avatar, "アカウント画像" %><br />
    <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "変更", data:{confirm: "アカウント情報を変更しますか？"}%>
  </div>
<% end %>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除してもよろしいですか?（復元は致しかねますのでご注意下さい）" }, method: :delete %></p>

<%= link_to "戻る", :back %>