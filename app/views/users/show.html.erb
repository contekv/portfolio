<h1>プロフィール詳細</h1>
<div id="conversations"><h2><%= @user.name %></h2></div>

<%= render "/users/shared/avatar", user: @user %>

<% if @user == current_user %>
  <%= link_to "プロフィール設定", edit_user_registration_path(@user.id) %>
<% end %>

<% if @user.conversations.present? %>
  <p><%= link_to "会話へ", conversation_path(@conversation_id) %></p>
<% else %>
  <%= render "form", conversation: @conversation, user: @user %>
<% end %>

<% if current_user.admin? %>
  <%= link_to "ユーザー一覧に戻る", users_path %>
<% else %>
  <%= link_to "HOME", home_path %>
<% end %> 