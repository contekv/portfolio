<% unless current_user.admin? %>
  <h1><%= link_to "My ドクター", user_path(current_user) %></h1>
<% end %>

<% @entry.each do |entry| %>
  <h2><strong><a href="/messages/<%= entry.user.id %>"><%= entry.user.name %></a></strong></h2>
<% end %>

<hr>
<% if @messages.present? %>
  <% @messages.each do |msg| %>
    <strong><%= msg.content %></strong>
    <small><%= l msg.created_at, format: :short %></small>
    <small>by <strong><a href="/messages/<%= msg.user_id %>"><%= msg.user.name %></a></strong></small>

    <% if msg.user == current_user %>
      <%= link_to "削除", msg, method: :delete, data:{confirm: "コメントを削除しますか？"} %>
    <% end %>
    <hr>
  <% end %>

<% else %>
  <h3 class="text-center">まだ会話は行われていません</h3>
<% end %>

<%= render "form" %>

<% if current_user.admin? %>
  <%= link_to "ユーザー一覧に戻る", messages_path %>
  <%= link_to "会話履歴", rooms_path %>
<% else %>
  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% end %>