<div class="labeltext">
  <label class="ef">
    <%= form_with model: order do |f| %>
      <%= f.label :name, "薬名" %>
      <%= f.text_field :content, placeholder: "注文内容をご記入下さい", :size => 140, class: "ef" %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="center">
        <%= f.button "注文", data:{ confirm: "こちらの内容を注文しますか？" }, class: "cp_button07" %>
      </div>
    <% end %> 
  </label>
</div>